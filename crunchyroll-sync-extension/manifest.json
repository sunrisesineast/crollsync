{
  "manifest_version": 3,
  "name": "Crunchyroll Sync",
  "version": "1.0.0",
  "description": "Sync video playback across multiple browsers for Crunchyroll",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen"
  ],
  
  "host_permissions": [
    "https://*.crunchyroll.com/*",
    "https://static.crunchyroll.com/*",
    "https://*.firebaseio.com/*",
    "https://*.firebaseapp.com/*",
    "https://www.gstatic.com/*",
    "https://accounts.google.com/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.crunchyroll.com/*",
        "https://static.crunchyroll.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "dist/background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Crunchyroll Sync"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["dist/offscreen.js", "offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}


